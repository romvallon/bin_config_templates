#!/bin/bash

# remote
HOMEPATH='/home/lmfa/rvallon'
SCRATCHPATH='/scratch/rvallon'
STOREPATH='/store/lmfa-4/turb_strat_2D'

# local
LPATH='/home/rvallon/Documents/newton'

if [ "$#" -lt 2 ] ; then
  echo "no input. Input operation (mount/umount) and remote target."
    exit 2
fi

OP=$1
TARGET=$2



if [[ "$TARGET" = 'home' ]] ; then
  RPATH=$HOMEPATH
elif [[ "$TARGET" = 'store' ]] ; then
  RPATH=$STOREPATH
elif [[ "$TARGET" = 'scratch' ]] ; then
  RPATH=$SCRATCHPATH
else
  echo "Unknown remote target: " $2
  exit -1
fi



if [[ "$OP" = 'mount' ]] ; then

  $(sshfs plog:$RPATH $LPATH/$TARGET)

elif [[ "$OP" = 'umount' ]] ; then

  $(umount $LPATH/$TARGET )

else

  echo "Unknown operation: " $1
  exit -1

fi
