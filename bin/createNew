#!/bin/bash

if [ "$#" -lt 1 ] ; then
    echo "no input filename."
    exit 2
fi

filename=$(echo $1 | cut -d. -f1)
extension=$( echo $1 | cut -d. -f2)

if [ $extension == "" ]; then
  echo "the input filename has no extension."
  exit 2
fi

if [ -f "$1" ]; then
    echo "File already exists."
    exit 2
fi

today=$(LC_ALL=en.utf8 date)
title="title"
date=$(echo "Created on $today")
who="Romain Vallon"
position="Postdoctoral researcher"
affiliation="Ã‰cole Centrale Lyon"
object="Aim:"
toc="[toc]"

if [ $extension == "md" ]; then
  
  echo "# $title"                                     >> $1
  echo ''                                             >> $1
  echo "${date}. $who, ${position}, ${affiliation}."  >> $1
  echo ''                                             >> $1
  echo $toc                                           >> $1

elif [ $extension == "py" ]; then

  echo "# ${who}, ${position}, ${affiliation}." >> $1
  echo "# ${date}."                             >> $1
  echo "# $object"                              >> $1
  echo ''                                       >> $1
  cat $SYNCPRM/bin/template_py-script           >> $1

elif [ $extension == "sh" ]; then

  echo '#!/bin/bash'                            >> $1
  echo "# ${who}, ${position}, ${affiliation}." >> $1
  echo '#' $date                                >> $1
  echo '#' $object                              >> $1
  echo ''                                       >> $1
  cat $SYNCPRM/bin/template_sh-script           >> $1

elif [ $extension == "tex" ]; then

  echo "% ${who}, ${position}, ${affiliation}." >> $1
  echo "% ${date}."                             >> $1
  echo ''                                       >> $1
  echo '\documentclass[11pt, a4paper]{report}'  >> $1
  echo '\usepackage{authblk}'                   >> $1
  echo ''                                       >> $1
  echo "\\title{$title}"                        >> $1
  echo "\\author{$who}"                         >> $1
  echo "\\affil{$affiliation}"                  >> $1
  echo "\\date{\\today}"                        >> $1
  echo ''                                       >> $1
  echo "\\begin{document}"                      >> $1
  echo "\\maketitle"                            >> $1          
  echo ''                                       >> $1
  echo '\end{document}'                         >> $1

fi 

exit 0
