#!/bin/bash

HOST=$(hostname)
if [[ $HOST == *".eduroam.kth.se" ||Â $HOST == 'Shervins-MacBook-Air.local' ]]; then
  TARGET=~/bin
else
  TARGET=~/.local/bin
fi

if [ ! -d $TARGET ] ; then
    echo "Target directory does not exist."
    exit 2
fi

if [ "$#" -lt 1 ] ; then
    echo "no input. Input real path of a binary file."
    exit 2
fi

if [[ ! -x $1 ]]; then
  echo Input file is not executable.
  echo $1
  exit -1
fi

SOURCE=$(realpath $1)
ln -s $SOURCE  $TARGET

echo $1 added to "$TARGET".
